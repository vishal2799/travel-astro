---
import { Icon } from 'astro-icon/components';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import { services } from '../constants';
import Layout from '../layouts/Layout.astro';
import ServiceImg from '../assets/images/services.jpg';
import { Image } from 'astro:assets';
---

<Layout>
  <div class='min-h-screen bg-gradient-to-b from-white-100 to-primary-100'>
    <div class='container mx-auto px-4 py-8'>
      <Breadcrumbs items={[{ label: 'Services', href: '/services' }]} />

      <div class='max-w-3xl mx-auto text-center mt-12 mb-16'>
        <h1 class='heading-1 mb-6'>Our Services</h1>
        <p class='subheading'>
          Discover the range of premium travel services we offer to make your
          Indian journey unforgettable
        </p>
      </div>

      <div class='grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16'>
        {
          services.map((service) => (
            <div class='card p-6 hover:shadow-xl transition-shadow'>
              <div class='w-14 h-14 bg-primary-100 rounded-full flex items-center justify-center mb-6'>
                <Icon name={service.icon} class='w-7 h-7 text-primary' />
              </div>
              <h3 class='heading-3 mb-3'>{service.title}</h3>
              <p class='text-black-300 leading-relaxed'>
                {service.description}
              </p>
            </div>
          ))
        }
      </div>

      <section class='bg-white rounded-2xl shadow-lg overflow-hidden mb-16'>
        <div class='md:flex'>
          <div class='md:w-1/2'>
            <Image
              src={ServiceImg}
              alt='Travel expert assisting a client'
              width={800}
              height={600}
              class='w-full h-full object-cover'
            />
          </div>
          <div class='md:w-1/2 p-8 md:p-12 flex flex-col justify-center'>
            <h2 class='heading-2 mb-4'>Why Choose Our Services?</h2>
            <ul class='space-y-4'>
              {
                [
                  'Experienced travel experts with in-depth knowledge of India',
                  'Personalized service tailored to your unique preferences',
                  'Access to exclusive deals and perks across India',
                  'Time-saving planning and booking process',
                  'Peace of mind with our 24/7 support throughout India',
                ].map((item) => (
                  <li class='flex items-start'>
                    <Icon
                      name='briefcase'
                      class='w-5 h-5 text-primary mr-3 mt-1 flex-shrink-0'
                    />
                    <span class='text-black-300'>{item}</span>
                  </li>
                ))
              }
            </ul>
          </div>
        </div>
      </section>

      <section
        class='bg-primary text-white rounded-2xl p-8 md:p-12 text-center'
      >
        <h2 class='heading-2 text-white-100 mb-4'>
          Ready to Start Your Indian Journey?
        </h2>
        <p class='text-xl mb-8'>
          Let us help you plan the trip of a lifetime across India. Get in touch
          with our travel experts today.
        </p>
        <div class='flex flex-col sm:flex-row justify-center gap-4'>
          <a href='/quote' class='btn bg-white text-primary hover:bg-white-100'>
            Request a Quote
          </a>
          <a
            href='/contact-us'
            class='btn bg-secondary text-black hover:bg-opacity-80'
          >
            Contact Us
          </a>
        </div>
      </section>
    </div>
  </div>
</Layout>
