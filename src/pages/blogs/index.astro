---
import { Icon } from 'astro-icon/components';
import Breadcrumbs from '../../components/Breadcrumbs.astro';
import BlogCard from '../../components/BlogCard.astro';
import Layout from '../../layouts/Layout.astro';

const blogPosts = [
  {
    id: 1,
    title: '10 Hidden Gems in Rajasthan',
    excerpt:
      'Discover lesser-known destinations in the Land of Kings that will take your breath away and provide unforgettable experiences off the beaten path.',
    image: '/tour11.jpg',
    author: 'Priya Sharma',
    date: 'May 15, 2023',
    category: 'Destinations',
    readTime: '5 min read',
  },
  {
    id: 2,
    title: 'The Ultimate Guide to Indian Street Food',
    excerpt:
      "Embark on a culinary journey through India's vibrant street food scene. Learn about must-try dishes and where to find them.",
    image: '/tour12.jpg',
    author: 'Rahul Kapoor',
    date: 'June 2, 2023',
    category: 'Food & Culture',
    readTime: '7 min read',
  },
  {
    id: 3,
    title: 'Eco-Friendly Travel in India: Reducing Your Carbon Footprint',
    excerpt:
      'Explore sustainable travel options in India and make a positive impact on the environment while still enjoying amazing adventures.',
    image: '/tour13.jpg',
    author: 'Anjali Desai',
    date: 'June 20, 2023',
    category: 'Sustainable Travel',
    readTime: '6 min read',
  },
  {
    id: 4,
    title: "Spiritual Journey: Exploring India's Sacred Sites",
    excerpt:
      "Embark on a transformative journey through India's most revered spiritual destinations, from Varanasi to Rishikesh.",
    image: '/tour14.jpg',
    author: 'Arjun Mehta',
    date: 'July 5, 2023',
    category: 'Spiritual Travel',
    readTime: '8 min read',
  },
  {
    id: 5,
    title: "Photography Tips for Capturing India's Vibrant Colors",
    excerpt:
      "Learn how to take stunning photos that truly capture the essence of India's colorful landscapes, festivals, and people.",
    image: '/tour11.jpg',
    author: 'Neha Gupta',
    date: 'July 18, 2023',
    category: 'Photography',
    readTime: '5 min read',
  },
  {
    id: 6,
    title: 'Solo Female Travel in India: Tips and Experiences',
    excerpt:
      'Discover the joys and challenges of solo female travel in India. Gain confidence and create unforgettable memories.',
    image: '/tour12.jpg',
    author: 'Meera Patel',
    date: 'August 1, 2023',
    category: 'Solo Travel',
    readTime: '7 min read',
  },
];

const categories = [
  'Destinations',
  'Food & Culture',
  'Sustainable Travel',
  'Spiritual Travel',
  'Photography',
  'Solo Travel',
  'Adventure',
  'Luxury Travel',
];
---

<Layout>
  <div class='min-h-screen bg-gradient-to-b from-white-100 to-primary-100'>
    <div class='container mx-auto px-4 py-8'>
      <Breadcrumbs items={[{ label: 'Blog', href: '/blog' }]} />

      <div class='max-w-3xl mx-auto text-center mt-12 mb-16'>
        <h1 class='heading-1 mb-6'>Indian Wanderlust Blog</h1>
        <p class='subheading'>
          Explore travel tips, destination guides, and inspiring stories from
          across India
        </p>
      </div>

      <div class='flex flex-col lg:flex-row gap-8 mb-16'>
        <div class='lg:w-3/4'>
          <div class='grid md:grid-cols-2 gap-8'>
            {blogPosts.map((post) => <BlogCard post={post} />)}
          </div>
          <div class='mt-12 text-center'>
            <button class='btn-primary'>Load More Posts</button>
          </div>
        </div>
        <aside class='lg:w-1/4'>
          <div class='bg-white rounded-lg shadow-md p-6 mb-8'>
            <h3 class='text-xl font-bold mb-4'>Search Posts</h3>
            <form class='flex'>
              <input
                type='text'
                placeholder='Search...'
                class='input flex-grow'
              />
              <button type='submit' class='btn-primary ml-2'>
                <Icon name='search' class='w-5 h-5' />
              </button>
            </form>
          </div>
          <div class='bg-white rounded-lg shadow-md p-6 mb-8'>
            <h3 class='text-xl font-bold mb-4'>Categories</h3>
            <ul class='space-y-2'>
              {
                categories.map((category, index) => (
                  <li>
                    <a
                      href={`/blog/category/${category
                        .toLowerCase()
                        .replace(/\s+/g, '-')}`}
                      class='text-black-300 hover:text-primary transition-colors'
                    >
                      {category}
                    </a>
                  </li>
                ))
              }
            </ul>
          </div>
          <div class='bg-white rounded-lg shadow-md p-6'>
            <h3 class='text-xl font-bold mb-4'>Subscribe to Our Newsletter</h3>
            <p class='text-black-300 mb-4'>
              Stay updated with our latest travel tips and destinations in
              India.
            </p>
            <form class='space-y-4'>
              <input
                type='email'
                placeholder='Your email address'
                class='input w-full'
                required
              />
              <button type='submit' class='btn-primary w-full'>
                Subscribe
              </button>
            </form>
          </div>
        </aside>
      </div>
    </div>
  </div>
</Layout>
