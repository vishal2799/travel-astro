      <div class='max-w-4xl mx-auto text-center mt-12 mb-16'>
        <h1 class='heading-1 mb-6'>Indian Wanderlust Blog</h1>
        <p class='subheading'>
          Explore travel tips, destination guides, and inspiring stories from
          across India
        </p>
      </div>

      <div class='grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8'>
        {blogPosts.map((post) => <BlogCard post={post} />)}
