---
import { Icon } from 'astro-icon/components';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <div class='min-h-screen bg-gradient-to-b from-white-100 to-primary-100'>
    <div class='container mx-auto px-4 py-8'>
      <Breadcrumbs items={[{ label: 'Contact', href: '/contact' }]} />

      <div class='max-w-4xl mx-auto mt-12'>
        <h1 class='heading-1 mb-6 text-center'>Contact Us</h1>
        <p class='subheading text-center mb-12'>
          We&apos;re here to help you plan your perfect journey. Get in touch
          with us today!
        </p>

        <div class='grid md:grid-cols-2 gap-12'>
          <div>
            <h2 class='heading-3 mb-6'>Get in Touch</h2>
            <ul class='space-y-4 mb-8'>
              <li class='flex items-start'>
                <Icon
                  name='geo-alt'
                  class='w-6 h-6 text-primary mr-3 flex-shrink-0 mt-1'
                />
                <span class='text-black-200'>
                  123 Travel Street, Wanderlust City, 12345, India
                </span>
              </li>
              <li class='flex items-center'>
                <Icon
                  name='telephone'
                  class='w-6 h-6 text-primary mr-3 flex-shrink-0'
                />
                <span class='text-black-200'>+91 98765 43210</span>
              </li>
              <li class='flex items-center'>
                <Icon
                  name='envelope'
                  class='w-6 h-6 text-primary mr-3 flex-shrink-0'
                />
                <span class='text-black-200'> info@indianwanderlust.com </span>
              </li>
              <li class='flex items-center'>
                <Icon
                  name='clock'
                  class='w-6 h-6 text-primary mr-3 flex-shrink-0'
                />
                <span class='text-black-200'>Mon-Sat: 9am-6pm</span>
              </li>
            </ul>

            <h3 class='heading-3 mb-4'>Follow Us</h3>
            <div class='flex space-x-4'>
              <a
                href='#'
                class='text-black-300 hover:text-primary transition-colors'
              >
                <Icon name='facebook' class='w-6 h-6' />
              </a>
              <a
                href='#'
                class='text-black-300 hover:text-primary transition-colors'
              >
                <Icon name='twitter-x' class='w-6 h-6' />
              </a>
              <a
                href='#'
                class='text-black-300 hover:text-primary transition-colors'
              >
                <Icon name='instagram' class='w-6 h-6' />
              </a>
            </div>
          </div>

          <div>
            <h2 class='heading-3 mb-6'>Send Us a Message</h2>
            <form class='space-y-4'>
              <div>
                <label
                  for='name'
                  class='block text-sm font-medium text-black-200 mb-1'
                >
                  Name
                </label>
                <input
                  type='text'
                  id='name'
                  name='name'
                  class='input'
                  required
                />
              </div>
              <div>
                <label
                  for='email'
                  class='block text-sm font-medium text-black-200 mb-1'
                >
                  Email
                </label>
                <input
                  type='email'
                  id='email'
                  name='email'
                  class='input'
                  required
                />
              </div>
              <div>
                <label
                  for='subject'
                  class='block text-sm font-medium text-black-200 mb-1'
                >
                  Subject
                </label>
                <input
                  type='text'
                  id='subject'
                  name='subject'
                  class='input'
                  required
                />
              </div>
              <div>
                <label
                  for='message'
                  class='block text-sm font-medium text-black-200 mb-1'
                >
                  Message
                </label>
                <textarea
                  id='message'
                  name='message'
                  rows={4}
                  class='input'
                  required></textarea>
              </div>
              <button type='submit' class='btn-primary w-full'>
                Send Message
              </button>
            </form>
          </div>
        </div>

        <div class='mt-16'>
          <h2 class='heading-3 mb-6'>Our Location</h2>
          <div class='relative h-[400px] rounded-lg overflow-hidden'>
            <img
              src='/tour11.jpg'
              alt='Map of Indian Wanderlust Travel office location'
              class='absolute inset-0 w-full h-full object-cover'
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
